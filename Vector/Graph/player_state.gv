digraph player_state {
    overlap = scale;
	splines = true;
    
    air;
    dash;
    idle;
    run;
    crouch_idle;
    crouch_walk;
    
    air -> idle;
    
    dash -> idle;
    
    idle -> air;
    idle -> dash;
    idle -> run;
    idle -> crouch_idle;
    
    run -> air;
    run -> dash;
    run -> crouch_walk;
    
    crouch_idle -> idle;
    crouch_idle -> crouch_walk;
    
    crouch_walk -> run;
    crouch_walk -> crouch_idle;
}
